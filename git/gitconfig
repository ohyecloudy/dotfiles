[user]
    name = ohyecloudy
    email = ohyecloudy@gmail.com
[core]
    excludesfile = ~/.gitignore_global
    commentchar = $
    editor = ec-wait
    precomposeunicode = true
    # 한글 파일 이름 깨짐 방지
    quotepath = false
    # windows에서 magit 속도 향상 https://magit.vc/manual/magit/Microsoft-Windows-Performance.html
    preloadindex = true
    # windows에서 magit 속도 향상 https://magit.vc/manual/magit/Microsoft-Windows-Performance.html
    fscache = true
	pager = cat
	untrackedCache = true
	fsmonitor = true
[alias]
    co = checkout
    cp = cherry-pick -x
    st = status -sb
    ls = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    standup = log --since '1 day ago' --oneline --author ohyecloudy
    delete-merged-branches = "!git checkout $(git rev-parse --verify main >/dev/null 2>&1 && echo main || echo master) && \
        git branch --merged | \
        grep -v \\* | \
        xargs -n 1 git branch -d;"
    unmerged = diff --name-only --diff-filter=U
    rebase-branches = "!git co master && git branch | grep -v \\\\* | xargs -n 1 git rebase master;"
    stsh = stash --keep-index
    staash = stash --include-untracked
    # between tags
    bt = "!f() { \
        end=$1; \
        delta=${2:-1}; \
        start=$((end-delta)); \
        author=$(git config --get user.email); \
        set -x; \
        git log dev-$start..dev-$end --author=$author; \
        }; f"
	p4 = !python.exe \"C:/git-sdk-64/mingw64/libexec/git-core/git-p4\"
	p4-local-rebase = "!f() { git rebase p4/master; }; f"
[pull]
    rebase = true
[push]
    default = simple
    autoSetupRemote = true
    followTags = true
[fetch]
    prune = true
    pruneTags = true
    all = true
[magit]
    hideCampaign = true
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
[gc]
    # windows에서 magit 속도 향상 https://magit.vc/manual/magit/Microsoft-Windows-Performance.html
    auto = 256
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[diff "org"]
    xfuncname = "^(\\*+ +.*|#\\+title:.*)$"
[diff "lisp"]
    xfuncname = "^(((;;;+ )|\\(|([ \t]+\\(((cl-|el-patch-)?def(un|var|macro|method|custom)|gb/))).*)$"
[column]
    #
    ui = auto
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[init]
    defaultBranch = main
[help]
    autocorrect = prompt
[commit]
    verbose = false
[rerere]
    enabled = true
    autoupdate = true
[merge]
    conflictstyle = zdiff3

[git-p4]
	metadataFallbackEncoding = cp949
	skipSubmitEdit = true
