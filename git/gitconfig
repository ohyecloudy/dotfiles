[user]
	name = ohyecloudy
	email = ohyecloudy@gmail.com
[core]
	excludesfile = ~/.gitignore_global
	commentchar = $
	editor = ec-wait
	precomposeunicode = true
        # 한글 파일 이름 깨짐 방지
        quotepath = false
        # windows에서 magit 속도 향상 https://magit.vc/manual/magit/Microsoft-Windows-Performance.html
	preloadindex = true
        # windows에서 magit 속도 향상 https://magit.vc/manual/magit/Microsoft-Windows-Performance.html
	fscache = true
[alias]
	co = checkout
	cp = cherry-pick -x
	st = status -sb
	ls = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	standup = log --since '1 day ago' --oneline --author ohyecloudy
	delete-merged-branches = "!git co master && git branch --merged | grep -v \\* | xargs -n 1 git branch -d;"
	unmerged = diff --name-only --diff-filter=U
	rebase-branches = "!git co master && git branch | grep -v \\\\* | xargs -n 1 git rebase master;"
	pu = "!f() { \
		[[ $(git config \"branch.$(git symbolic-ref --short HEAD).merge\") = '' ]] && \
		git push -u origin $(git symbolic-ref --short HEAD) $@ || \
		git push $@; \
		}; f"
	stsh = stash --keep-index
	staash = stash --include-untracked
[pull]
	rebase = true
[push]
	default = simple
[fetch]
	prune = true
[magit]
	hideCampaign = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[gc]
    # 자동으로 gc가 도는 걸 끈다.
	# git p4를 사용해 perforce에 억지로 엉겨붙어 작업할 때, gc auto가 자주 호출돼 작업이 괴롭다.
	# 끄고 느려졌다 싶으면 수동으로 git gc --aggresive를 호출하는 걸로 극복한다.
	auto = 0
